doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://getbootstrap.com/dist/css/bootstrap.min.css')
    script(src="https://code.jquery.com/jquery-3.2.1.min.js")
    script(src="https://www.gstatic.com/firebasejs/3.9.0/firebase.js")
    script(src="https://www.gstatic.com/firebasejs/3.9.0/firebase-app.js")
    script(src="https://www.gstatic.com/firebasejs/3.9.0/firebase-auth.js")
    script(src="https://www.gstatic.com/firebasejs/3.9.0/firebase-database.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.min.js", integrity="sha256-3SrLjPeRPa1ofM280r+OMcUjJZKLWJHr6SRtRu3dRb0=", crossorigin="anonymous")
