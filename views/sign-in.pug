  body
    .container(style='width:300px;margin-top:30px;')
      h4(style='text-align:center;') Log In
      label(style='font-weight:normal;') Username
      .form-group
        input#email.form-control(type='email' placeholder='Username' required='' autofocus='')
      label(style='font-weight:normal;') Password
      .form-group
        input#password.form-control(type='password' placeholder='Password' required='')
      a(style='font-size:15px;' href='sign-up') Don't have an account? Sign up here.
      div(style='margin-top:5px;')
      a#forgot-pw(style='font-size:15px;cursor:pointer;') Forgot Password?
      button#sign-in.btn.btn-lg.btn-primary.btn-block(type='submit' style='margin-top:10px;font-size:14px;') Login
      div#errorbox(style='color: red;margin-top:10px;')
