  body
    include ./header-logged-in.pug
    .container-fluid
      .panel.panel-default
        .panel-heading
          h3 My Account
        .panel-body
          div(style='width:350px;float:left;height:500px;')
            h4(style='margin-bottom:20px;') Change Your Personal Details
            p(style='font-weight:bold;font-size:1.2em;') First Name:
              input.form-control#firstName(type='text' value=firstname size='20' style='margin-top:0px;margin-bottom:5px;')
            p(style='font-weight:bold;font-size:1.2em;') Last Name:
              input.form-control#lastName(type='text' value=lastname size='20' style='margin-top:0px;margin-bottom:5px;')
            p(style='font-weight:bold;font-size:1.2em;') Company:
              input.form-control#companyName(type='text' value=company size='20' style='margin-top:0px;margin-bottom:5px;')
            p(style='font-weight:bold;font-size:1.2em;') Phone number:
              input.form-control#phoneNumber(type='text' value=phone size='20' style='margin-top:0px;margin-bottom:5px;')
            p(style='font-weight:bold;font-size:1.2em;') E-mail address:
              input.form-control#newEmailAddress(type='text' value=email size='20' style='margin-top:0px;margin-bottom:0px;')
            button.btn#saveChanges(type='button' style='float:left;') Save Changes
            div#msgBoxForGeneral(style='margin-top:15px;')
          div(style='width:350px;float:left;height:330px;')
            h4(style='margin-bottom:20px;') Change Your Password
            p(style='font-weight:bold;font-size:1.2em;') Current password:
              input.form-control(type='password' id='currentPassword' size='20' style='margin-bottom:5px;margin-top:0px;')
            p(style='font-weight:bold;font-size:1.2em;') New password:
              input.form-control(type='password' id='newpassword1' size='20' style='margin-bottom:5px;margin-top:0px;')
            p(style='font-weight:bold;font-size:1.2em;') Confirm new password:
              input.form-control(type='password' id='newPassword2' size='20' style='margin-bottom:0px;margin-top:0px;')
            button.btn#changePassword(type='button' style='float:left;') Change Password
            div#msgBoxForPassword(style='margin-top:15px;')
